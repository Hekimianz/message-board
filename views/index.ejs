<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="./styles.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900&display=swap"
      rel="stylesheet"
    />
    <script src="/main.js" defer></script>
  </head>
  <body>
    <h1>MiniBoard</h1>
    <ul>
      <% if (messages && messages.length > 0) { %> <% messages.forEach((msg) =>
      { %> <%- include("message", { user: msg.user, message: msg.message, added:
      msg.date }) %> <% }) %> <% } %>
    </ul>
    <form action="/" method="POST">
      <button type="submit" class="button">Send New Message</button>
    </form>
    <%- include("footer") %>
    <div class="background">
      <% for (let i = 0; i < 20; i++) { %>
      <span></span>
      <% } %>
    </div>
  </body>
</html>
